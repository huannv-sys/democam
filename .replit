modules = ["nodejs-20", "python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "RepositoryAnalyzer"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Analyzer Test"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "ServerBackend"

[[workflows.workflow]]
name = "RepositoryAnalyzer"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python analyzer.py"

[[workflows.workflow]]
name = "Analyzer Test"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python analyzer.py"

[[workflows.workflow]]
name = "ServerBackend"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node server.js"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "python analyzer.py"]

[[ports]]
localPort = 5000
externalPort = 80
